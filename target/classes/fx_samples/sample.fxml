<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OrmFxController">
    <VBox>
        <HBox>
            <HBox spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <HBox fx:id="teamBoxContainer" spacing="10">
                </HBox>
            </HBox>
        </HBox>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="60" />
            </padding>
            <HBox>
                <HBox>
                    <padding>
                        <Insets right="10" top="4" />
                    </padding>
                    <Label>Student ID</Label>
                </HBox>
                <TextField fx:id="studentInput" maxWidth="80.0" />
            </HBox>
            <Button onAction="#addMemberToTeam">Add</Button>
            <Button onAction="#swapMembers">Swap</Button>
        </HBox>
        <HBox spacing="10" fx:id="chartsContainer">
            <padding>
                <Insets bottom="10" left="10" right="10" top="60" />
            </padding>
        </HBox>
    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
